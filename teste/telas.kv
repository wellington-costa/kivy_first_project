Gerenciador:
   CadProdScreen:


<CadProdScreen>:
   name: "CadProdScreen"
   MDFloatLayout:
      BoxLayout:
         orientation: "vertical"
         pos_hint:{"center_x": .55, "center_y": .5}
         adaptive_height: True
         md_bg_color: app.theme_cls.primary_color
         size_hint: (.5, .75)
         MDTextField:
            id: desc_product
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "Descrição:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: marca
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "Marca:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: cod_product
            mode: "rectangle"
            required: True
            helper_text_mode: "on_error"
            hint_text: "Código:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: qtd
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "Quantidade (Un):"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: prec_compra
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "R$ Compra:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: prec_atacado
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "R$ Atacado:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: prec_varejo
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "R$ Varejo:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

         MDTextField:
            id: cb
            mode: "rectangle"
            required: False
            helper_text_mode: "on_error"
            hint_text: "Código de Barras:"
            font_size: 16
            multiline: False
            size_hint: (0.7,0.05)

   MDFloatLayout:
      BoxLayout:
         orientation: "horizontal"
         size_hint: (.5, 1)
         pos_hint:{"center_x": .47, "center_y": .55}

         MDRaisedButton:
            text:"Limpar"
            size_hint: (0.5,0.05)
            on_press: root.clear()



         MDLabel:
            id:lbregister
            text:" "

         MDRaisedButton:
            text:"Cadastrar"
            size_hint: (0.5,0.05)
            on_press: root.register(desc_product.text, marca.text, cod_product.text, qtd.text, prec_compra.text, prec_atacado.text, prec_varejo.text, cb.text)


